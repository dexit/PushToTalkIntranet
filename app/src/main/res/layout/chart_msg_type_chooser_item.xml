<?xml version="1.0" encoding="utf-8"?>
	<!-- 聊天界面底部的选择发送文件布局 默认是隐藏的 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/fraLayChartMore" android:layout_width="fill_parent"
	android:layout_height="70dip" android:background="@drawable/chart_msg_type_bg"
	android:orientation="horizontal" >
		<Button android:id="@+id/btnChartSendImage"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="图片" android:background="@drawable/btn_chart_msg_file_type"
			android:textColor="@color/white" android:drawableTop="@drawable/picture_type"
			android:layout_marginLeft="10dip"  android:layout_marginTop="5dip"/>
		<Button android:id="@+id/btnChartSendAudio"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="音频" android:background="@drawable/btn_chart_msg_file_type"
			android:textColor="@color/white" android:drawableTop="@drawable/audio_type"
			android:layout_marginLeft="10dip"  android:layout_marginTop="5dip"/>
		<Button android:id="@+id/btnChartSendMedia"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="视频" android:background="@drawable/btn_chart_msg_file_type"
			android:textColor="@color/white" android:drawableTop="@drawable/media_type"
			android:layout_marginLeft="10dip"  android:layout_marginTop="5dip"/>
		<Button android:id="@+id/btnChartSendApk" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="应用"
			android:background="@drawable/btn_chart_msg_file_type"
			android:textColor="@color/white" android:drawableTop="@drawable/apk_type"
			android:layout_marginLeft="10dip"  android:layout_marginTop="5dip"/>
		<Button android:id="@+id/btnChartReceiveFile"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="已收文件" android:background="@drawable/btn_chart_msg_file_type"
			android:textColor="@color/white" android:drawableTop="@drawable/already_recei_file"
			android:layout_marginLeft="10dip"  android:layout_marginTop="5dip"/>
</LinearLayout>
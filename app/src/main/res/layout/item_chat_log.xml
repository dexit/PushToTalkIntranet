<?xml version="1.0" encoding="utf-8"?>
	<!-- 聊天记录 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:background="#FFFFFF"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:padding="3dip">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal">
		<TextView android:id="@+id/tv_item_chat_log_fromIP"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="fromIP" android:layout_weight="1" />
		<TextView android:id="@+id/tv_item_chat_log_toIP"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="toIP" android:layout_weight="1" />
		<TextView android:id="@+id/tv_item_chat_log_chatID"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="chatID" android:layout_weight="1" />
	</LinearLayout>
	<TextView android:id="@+id/tv_item_chat_log_time"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="time" android:layout_weight="1" />
	<TextView android:id="@+id/tv_item_chat_log_body"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="body" android:layout_weight="1" />
	<TextView android:id="@+id/tv_item_chat_log_filePath"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="chatID" android:layout_weight="1" />
</LinearLayout>